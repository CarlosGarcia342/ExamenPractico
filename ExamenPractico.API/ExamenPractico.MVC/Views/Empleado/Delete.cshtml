@model ExamenPractico.MVC.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<h2>Eliminar Empleado</h2>

<div>
    <h3>¿Está seguro de eliminar el siguiente empleado?</h3>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <!-- Puedes agregar más campos si es necesario -->
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
