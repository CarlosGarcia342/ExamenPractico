@model List<ExamenPractico.MVC.Models.Empleado>
@{
    ViewData["Title"] = "Listado de Empleados";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
    string search = ViewBag.Search as string;
}

<h2 class="mb-4">Listado de Empleados</h2>

<div class="row g-3 mb-3 align-items-center">
    <div class="col-auto">
        <form method="get" asp-action="Index" class="d-flex">
            <input type="text" name="search" value="@search" placeholder="Buscar..." class="form-control me-2" />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>
    <div class="col-auto ms-auto">
        <a asp-action="Create" class="btn btn-success">Agregar Nuevo Empleado</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Email</th>
                <th scope="col">Teléfono</th>
                <th scope="col">Salario</th>
                <th scope="col">Fecha Ingreso</th>
                <th scope="col" class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var empleado in Model)
            {
                <tr>
                    <td>@empleado.Nombre</td>
                    <td>@empleado.Apellido</td>
                    <td>@empleado.Email</td>
                    <td>@empleado.Telefono</td>
                    <td>@empleado.Salario.ToString("C")</td>
                    <td>@empleado.FechaIngreso.ToShortDateString()</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@empleado.Id" class="btn btn-sm btn-warning me-1">Editar</a>
                        <a asp-action="Delete" asp-route-id="@empleado.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Paginación -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = i, search = search })">@i</a>
            </li>
        }
    </ul>
</nav>
